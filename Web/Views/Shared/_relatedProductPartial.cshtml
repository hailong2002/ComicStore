@using ComicStore.Models;
@{
    var relatedProduct = ViewData["RelatedProducts"] as List<ProductViewModel>;
}

<div class="row">
    <div class="col-lg-12 text-center">
        <div class="related__title">
            <h5>RELATED PRODUCTS</h5>
        </div>
    </div>
    @foreach(var item in relatedProduct)
    {
        <div class="col-lg-3 col-md-4 col-sm-6">
            <div class="product__item">
                <div class="product__item__pic set-bg" data-setbg="@item.ImagePath">
                    <div class="label new">New</div>
                    <ul class="product__hover">
                        <li><a href="@item.ImagePath" class="image-popup"><span class="arrow_expand"></span></a></li>
                        @*<li><a href="#"><span class="icon_heart_alt"></span></a></li>*@
                        <li><a asp-action="ProductDetails" asp-controller="Client" asp-route-id="@item.Id"><span class="icon_bag_alt"></span></a></li>
                    </ul>
                </div>
                <div class="product__item__text">
                    <h6><a href="#">@item.Name</a></h6>
                
                    <div class="product__price">$ @item.Price</div>
                </div>
            </div>
        </div>
    }
    
</div>