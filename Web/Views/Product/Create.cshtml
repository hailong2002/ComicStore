@model ComicStore.Models.ProductViewModel

@{
    ViewData["Title"] = "Create";
}

<div style="padding:5px 15px">
    <h3>Create new product</h3>
    <hr />
    @if(ViewData["Error"] != null)
    {
        <h3 class="alert alert-danger"><strong>@ViewData["Error"]</strong></h3>
    }
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="form-group col-sm-6">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-6">
                                <label asp-for="Quantity" class="control-label"></label>
                                <input asp-for="Quantity" class="form-control" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Image" class="control-label">Image link</label>
                            <input asp-for="Image" class="form-control" type="file"/>
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="control-label">Select a brand:</label><br />
                            <select asp-for="Brand" class="form-control">
                                <option value="Marvel">Marvel</option>
                                <option value="DC">DC</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Category</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Supplier</label>
                            <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.SupplierId"></select>
                        </div>
                    </div>

                </div>

                <br />

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" asp-route-categoryName="@ViewData["CateName"]" />
                    <a asp-action="Index" class="btn btn-secondary" asp-route-cateName="@ViewData["CateName"]">Cancel</a>
                </div>


            </form>
        </div>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

