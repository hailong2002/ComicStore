@page
@model LoginModel

@{
    Layout = "_loginLayout";
    ViewData["Title"] = "Log in";
    var status = ViewData["StatusConfirm"] as string;
}

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">
            @if (status == "Success")
            {
                <h6 class="alert alert-success" style="width:60%">Register successfully</h6>
            }
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <img src="~/images/cs_logo.png" style="margin-bottom: 30px"/>
                                </div>
                                <form class="user" method="post">
                                    <div class="form-group">
                                        <input type="email" class="form-control form-control-user" as
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               autocomplete="username" aria-required="true" asp-for="Input.Email" required
                                               placeholder="Enter Email Address...">
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Password"
                                               asp-for="Input.Password" id="password-field" autocomplete="current-password" aria-required="true" required>
                                    </div>
                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox small">
                                            <input type="checkbox" asp-for="Input.RememberMe" class="custom-control-input" id="customCheck">
                                            <label class="custom-control-label" for="customCheck">
                                                Remember Me
                                            </label>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Login
                                    </button>
                                
                                </form>
                                <hr>
                                <div class="text-center">
                                    <a class="small" asp-page="./ForgotPassword">Forgot Password?</a>
                                </div>
                                <div class="text-center">
                                    <a class="small" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register an Account!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>








@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
