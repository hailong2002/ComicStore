@page
@model RegisterConfirmationModel
@{
    Layout = "_loginLayout";
    ViewData["Title"] = "Register confirmation";
    var statusConfirm = ViewData["StatusConfirm"] as string;
}
<div class="form-wrapper" style="background-color: rgba(225, 225, 225, 0.9); padding: 20px">
    <div style="justify-content:center">
        <h1>@ViewData["Title"]</h1>
        @{
            if (@Model.DisplayConfirmAccountLink)
            {
                <p>
                    This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
                    Normally this would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                </p>
            }
            else
            {
                <p>
                    Please check your email to confirm your account.
                </p>
            }
        }
        @if ( statusConfirm == "Success")
        {
            <h3 class="alert alert-success" style="margin-top:-70px">Confirm email successful. <a asp-area="Identity" asp-page="/Account/Login">Login now</a></h3>
        }
        else
        {
            <h6 class="alert alert-danger" style="margin-top:70px">Confirm email failed!</h6>
        }
    </div>
</div>


